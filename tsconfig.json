{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "sourceMap": false,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2015",
        "module": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "strict": true,
        "strictNullChecks": true,
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "baseUrl": "src",
        "paths": {
            "@main/*": [
                "./app/main/*"
            ],
            "@shared/*": [
                "./app/shared/*"
            ],
            "@routes": [
                "./app/routes/app.routes"
            ],
            "@env": [
                "./environments/environment"
            ]
        }
    },
    "angularCompilerOptions": {
        "preserveWhitespaces": false
    },
    "exclude": [
        "test.ts",
        "**/*.spec.ts"
    ]
}